Algoritmo "Dissecando Matrizes - Desafio 1"

Var

   V: Vetor[1..4, 1..4] de inteiro
   i, j, Decisao: Inteiro

Inicio

   Para i <- 1 ate 4 passo 1 faca
      Para j <- 1 ate 4 passo 1 faca
         Escreva("Informe o número da posição [",i,",",j," ]: ")
         Leia(V[i,j])
      Fimpara
   Fimpara
   Escreval("")
   Limpatela

   Enquanto (Decisao <> 5) faca

      Escreval("   MENU DE OPÇÕES")
      Escreval("====================")
      Escreval("[1] Mostrar a matriz")
      Escreval("[2] Mostrar diagonal principal")
      Escreval("[3] Triângulo superior")
      Escreval("[4] Triângulo inferior")
      Escreval("[5] Sair")
      Escreval("")
      Escreva("Escolha: ")
      Leia(Decisao)
      Limpatela
      Escreval("")


         Se(Decisao = 1)entao
            Para i <- 1 até 4 passo 1 faca
               Para j <- 1 até 4 passo 1 faca
                  Escreva(V[i,j]:4)
               Fimpara
               Escreval()
            Fimpara
            Escreval("")
         Fimse


         Se(Decisao = 2)entao
            Para i <- 1 ate 4 passo 1 faca
               Para j <- 1 ate 4 passo 1 faca
                  Se(i = j)entao
                     Escreva(V[i,j]:4)
                  Senao
                     Escreva("    ")
                  Fimse
               Fimpara
               Escreval()
            Fimpara
            Escreval("")
         Fimse


         Se(Decisao = 3)entao
            Para i <- 1 até 4 passo 1 faca
               Para j <- 1 até 4 passo 1 faca

                  Se(i = 2)e(j = 1)entao
                     Escreva("    ")
                  Fimse
                  Se(i = 3)e(j = 1)entao
                     Escreva("    ")
                  Fimse
                  Se(i = 4)e(j = 1)entao
                     Escreva("    ")
                  Fimse
                  Se(i = 3)e(j = 2)entao
                     Escreva("    ")
                  Fimse
                  Se(i = 4)e(j = 2)entao
                     Escreva("    ")
                  Fimse
                  Se(i = 4)e(j = 3)entao
                     Escreva("    ")
                  Fimse

                  Se(i = j)entao
                     Escreva("    ")
                  Fimse

                  Se(i = 1)e(j = 2)entao
                     Escreva(V[i,j]:4)
                  Fimse
                  Se(i = 1)e(j = 3)entao
                     Escreva(V[i,j]:4)
                  Fimse
                  Se(i = 1)e(j = 4)entao
                     Escreva(V[i,j]:4)
                  Fimse
                  Se(i = 2)e(j = 3)entao
                     Escreva(V[i,j]:4)
                  Fimse
                  Se(i = 2)e(j = 4)entao
                     Escreva(V[i,j]:4)
                  Fimse
                  Se(i = 3)e(j = 4)entao
                     Escreva(V[i,j]:4)
                  Fimse
               Fimpara
              Escreval()
            Fimpara
            Escreval("")
         Fimse


         Se(Decisao = 4)entao
            Para i <- 1 até 4 passo 1 faca
               Para j <- 1 até 4 passo 1 faca

                  Se(i = 2)e(j = 1)entao
                     Escreva(V[i,j]:4)
                  Fimse
                  Se(i = 3)e(j = 1)entao
                     Escreva(V[i,j]:4)
                  Fimse
                  Se(i = 4)e(j = 1)entao
                     Escreva(V[i,j]:4)
                  Fimse
                  Se(i = 3)e(j = 2)entao
                     Escreva(V[i,j]:4)
                  Fimse
                  Se(i = 4)e(j = 2)entao
                     Escreva(V[i,j]:4)
                  Fimse
                  Se(i = 4)e(j = 3)entao
                     Escreva(V[i,j]:4)
                  Fimse

                  Se(i = j)entao
                     Escreva("    ")
                  Fimse

                  Se(i = 1)e(j = 2)entao
                     Escreva("    ")
                  Fimse
                  Se(i = 1)e(j = 3)entao
                     Escreva("    ")
                  Fimse
                  Se(i = 1)e(j = 4)entao
                     Escreva("    ")
                  Fimse
                  Se(i = 2)e(j = 3)entao
                     Escreva("    ")
                  Fimse
                  Se(i = 2)e(j = 4)entao
                     Escreva("    ")
                  Fimse
                  Se(i = 3)e(j = 4)entao
                     Escreva("    ")
                  Fimse
               Fimpara
              Escreval()
            Fimpara
            Escreval("")
         Fimse
   Fimenquanto
Escreval("ENCERRANDO...")
Fimalgoritmo
